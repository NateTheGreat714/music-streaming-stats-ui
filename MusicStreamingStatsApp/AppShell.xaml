<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MusicStreamingStatsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MusicStreamingStatsApp"
    xmlns:views="clr-namespace:MusicStreamingStatsApp.Views"
    Title="Music Streaming Stats"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:DashboardView}"
        Route="Dashboard" />

    <ShellContent
        Title="Releases"
        ContentTemplate="{DataTemplate views:ReleasesView}"
        Route="Releases" />

    <ShellContent
        Title="Audience"
        ContentTemplate="{DataTemplate views:AudienceView}"
        Route="Audience" />

</Shell>
