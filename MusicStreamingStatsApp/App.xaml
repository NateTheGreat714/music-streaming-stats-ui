<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="MusicStreamingStatsApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:MusicStreamingStatsApp.Converters"
    xmlns:local="clr-namespace:MusicStreamingStatsApp">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:IsIntPositiveToBoolConverter x:Key="IsIntPositiveToBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
